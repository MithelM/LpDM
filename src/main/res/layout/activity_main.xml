<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TocaDoCoelho">

    <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            android:text="TOCA DO COELHO"
            android:padding="20dp"/>

    <TextView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"

    />

    <Button

            android:id="@+id/butregis"

            android:layout_height="wrap_content"
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:text="Registrar Pedido"
            android:layout_margin="16dp"
            android:onClick="onClickButRegis"
        />

    <Button
            android:id="@+id/butfunc"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Consultar Horas"
            android:onClick="onClickButConsul"
    />

    <Button
        android:id="@+id/pagPedido"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Pedido"
        android:onClick="onClickButPedido"
    />


</LinearLayout>